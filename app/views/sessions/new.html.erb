<div class="login">
  <div class="container">
    <div class="form">
      <h1>Logowanie</h1>
      <div class="row">
        <div class="col-md-12">
          <%= form_for(:session, url: login_path) do |f| %>
              <%= f.email_field :email, :placeholder => "E-mail" %>
              <%= f.password_field :password, :placeholder => "Password" %>
              <%= f.submit "Zaloguj", class: "btn-submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>