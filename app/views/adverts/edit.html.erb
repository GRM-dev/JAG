<div class="container">
  <div class="row">
    <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
      <p>Link do ogloszenia dodany dnia:</p>
      <p class=" text-info"><%= @advert.date_adv_link_added.strftime('%e %b %Y') %></p>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= if (@advert.site != nil)
                  link_to @advert.site.name, @advert.site.url
                else
                  printf 'undefinded'
                end %>
          </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <%= link_to @advert.url do %>
                <div class="col-md-3 col-lg-3 " align="center">
                  <%= if (@advert.site != nil)
                        image_tag @advert.site.name+".png", title: "Site Logo", class: "img-circle img-responsive"
                      end %>
                </div>
            <% end %>
            <div class=" col-md-9 col-lg-9 ">
              <%= bootstrap_form_for(@advert, layout: :horizontal, label_col: "col-sm-6", control_col: "col-sm-6") do |f| %>
                  <%= f.text_field :job_category, label: "Kategoria", value: @advert.job_category.name %>
                  <%= f.text_field :city, label: "Miasto", value: @advert.city.name %>
                  <%= f.text_field :province, label: "Wojewodztwo", value: @advert.city.province.name %>
                  <%= f.text_field :company, label: "Firma", value: @advert.company.name %>
                  <%= f.text_field :appointment, label: "Stanowisko", value: @advert.appointment %>
                  <%= f.date_field :date_adv_added, label: "Ogloszono", value: @advert.date_adv_added.strftime('%Y-%m-%d') %>
                  <%= f.date_field :date_adv_expiration, label: "Wygasa", value: @advert.date_expiration.strftime('%Y-%m-%d') %>
                  <%= f.form_group :verified do %>
                      <%= f.check_box :verified, label: "Zweryfikowane", value: @advert.verified %>
                  <% end %>
                  <%= link_to "<- Powrot", advert_path(@advert), class: "btn" %>
                  <%= link_to "Przejdz do oferty", @advert.url, class: "btn" %>
                  <div class="pull-right">
                    <%= f.submit "Zapisz", class: "btn btn-primary" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <a data-original-title="Send Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
            <span class="pull-right">
              <div class="row">
                <%= button_to edit_advert_path(@advert), class: "btn btn-sm btn-warning", method: "get", :title => 'Edytuj', :rel => 'tooltip' do %>
                    <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                <%= button_to(advert_path(@advert), class: "btn btn-sm btn-danger", method: "delete", :title => 'Usun', :rel => 'tooltip', remote: true, data: {confirm: 'Usunac wybrane ogloszenie?'}) do %>
                    <i class="glyphicon glyphicon-remove"></i>
                <% end %>
              </div>
            </span>
        </div>
      </div>
    </div>
  </div>
</div>