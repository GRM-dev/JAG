<%- model_class = Advert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="jumbotron">
  <div class="panel-body">
    <strong><%= @adverts.count %></strong>
    <table class="table table-striped table-responsive">
      <thead>
      <tr>
        <th>ID</th>
        <th>URL</th>
        <th>Kategoria Pracy</th>
        <th>Miasto</th>
        <th>Wojewodztwo</th>
        <th>Firma</th>
        <th>Stanowisko</th>
        <th>Dodano</th>
        <th>Wygasa</th>
        <th>Zweryfikowany</th>
        <% if current_user.moderator? %>
          <th>Operacje</th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% @adverts.each do |a| %>
        <tr>
          <td><%= a.id %></td>
          <td><%= link_to "Szczegoly", action: "show", id: a %></td>
          <td><%= a.job_category.name %></td>
          <td><%= a.city.name %></td>
          <td><%= a.city.province.name %></td>
          <td><%= a.company.name %></td>
          <td><%= a.appointment %></td>
          <td><%= a.date_adv_added %></td>
          <td><%= a.date_expiration %></td>
          <td><%= check_box_tag 'cb_adv_ver_'+a.id.to_s, 'accepted', a.verified, disabled: true %></td>
          <% if current_user.moderator? %>
            <td>
              <div id="buuton-row" class="row">
                <%= button_to edit_advert_path(a), class: "btn btn-sm btn-warning", method: "get", :title => 'Edytuj', :rel => 'tooltip' do %>
                  <i class="glyphicon glyphicon-edit"></i>
                <% end %>
                <% if current_user.admin? %>
                  <%= button_to(advert_path(a), class: "btn btn-sm btn-danger", method: "delete", :title => 'Usun', :rel => 'tooltip', remote: true, data: {confirm: 'Usunac wybrane ogloszenie?'}) do %>
                    <i class="glyphicon glyphicon-remove"></i>
                  <% end %>
                <% end %>
              </div>
            </td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>