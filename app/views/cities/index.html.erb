<div class="content">
  <%- model_class = City -%>
  <div class="page-header">
    <h1><%= t 'jag.cities.title', :default => model_class.model_name.human(count: 2) %></h1>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t 'jag.cities.id', :default => model_class.human_attribute_name(:id) %></th>
      <th><%= t '.name', :default => model_class.human_attribute_name(:name) %></th>
      <th><%= t '.province', :default => model_class.human_attribute_name(:province) %></th>
      <th><%= t "helpers.actions" %></th>
    </tr>
    </thead>
    <tbody>
    <% @cities.each do |city| %>
        <tr>
          <td><%= link_to city.id, city_path(city) %></td>
          <td><%= city.name %></td>
          <td><%= city.province.name %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_city_path(city), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        city_path(city),
                        :method => :delete,
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>